<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:layout_height="wrap_content">
    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/title_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/default_title_color"
        android:textSize="@dimen/sp18"
        android:text="名字"/>
    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/cur_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_2"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/title_describe"
        android:textSize="@dimen/sp16"
        android:text="当前状态"/>
    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_2"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/cur_state"
        android:textSize="@dimen/sp16"
        android:text="用户信息"/>
    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_2"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/user_info"
        android:textSize="@dimen/sp16"
        android:text="使用金额"/>
    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_2"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/money"
        android:textSize="@dimen/sp16"
        android:text="时间"/>

    <com.xj.mainframe.view.BaseView.XJTextView
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="结束游戏"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="12dp"
        android:background="@drawable/arc_di_green"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1dp"
        android:background="@color/black_cut_line"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/time"/>

</android.support.constraint.ConstraintLayout>